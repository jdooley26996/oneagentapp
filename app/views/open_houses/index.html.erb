<%- model_class = OpenHouse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Phone_number) %></th>
      <th><%= model_class.human_attribute_name(:Email_address) %></th>
      <th><%= model_class.human_attribute_name(:How_did_you_here_about_our_open_house) %></th>
      <th><%= model_class.human_attribute_name(:Are_you_working_with_a_Realtor) %></th>
      <th><%= model_class.human_attribute_name(:Realtors_name_and_contact_information) %></th>
      <th><%= model_class.human_attribute_name(:Would_you_like_to_be_emailed_new_properties) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @open_houses.each do |open_house| %>
      <tr>
        <td><%= link_to open_house.id, open_house_path(open_house) %></td>
        <td><%= open_house.Name %></td>
        <td><%= open_house.Phone_number %></td>
        <td><%= open_house.Email_address %></td>
        <td><%= open_house.How_did_you_here_about_our_open_house %></td>
        <td><%= open_house.Are_you_working_with_a_Realtor %></td>
        <td><%= open_house.Realtors_name_and_contact_information %></td>
        <td><%= open_house.Would_you_like_to_be_emailed_new_properties %></td>
        <td><%= open_house.user_id %></td>
        <td><%=l open_house.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_open_house_path(open_house), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      open_house_path(open_house),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_open_house_path,
            :class => 'btn btn-primary' %>
